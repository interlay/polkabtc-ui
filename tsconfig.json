{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    // TODO: inspired by https://github.com/tailwindlabs/headlessui/issues/233
    // "jsxImportSource": "@emotion/react" // for the css prop
  },
  "include": [
    "src",
    "twin.d.ts"
  ],
  "rules": [
    {
      "loader": "raw-loader"
    }
  ]
}